<UserControl x:Class="PlainLogic.ViscaController.App.Controls.PanTiltControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlainLogic.ViscaController.App"
             mc:Ignorable="d" MinWidth="100" MinHeight="100"
             ClipToBounds="True">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Ellipse Name="target" Grid.Row="1" Grid.Column="1" Margin="5" Fill="Black" MouseDown="target_MouseDown" MouseMove="target_MouseMove" MouseUp="target_MouseUp" />

        <Ellipse Grid.Row="1" Grid.Column="1" Margin="12" Fill="Red" IsHitTestVisible="False" />

    </Grid>
</UserControl>
